<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp">
        <ImageView
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/return_white"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            />
        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/like"
            android:layout_marginTop="177dp"
            android:layout_marginLeft="320dp"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:id="@+id/item_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thinkpad"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P15v 2018"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:stretchColumns="3"
                >
                <TableRow>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_column = "1"
                        android:padding="3dip"
                        android:text="Date"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="Price"
                        android:textColor="@color/gray"
                        android:textStyle="bold"/>
                    <TextView
                        android:textSize="18dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="Recycle-station"
                        android:textColor="@color/gray"
                        android:textStyle="bold"/>
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#CCCCCC"/>

                <TableRow>
                    <TextView
                        android:gravity="center"
                        android:layout_height="30dp"
                        android:layout_column = "1"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="Apr1 , 2021"/>
                    <TextView
                        android:gravity="center"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="979"/>
                    />
                    <TextView
                        android:gravity="center"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="Fuzhou  University"/>
                    />
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="#CCCCCC"/>

                <TableRow>
                    <TextView
                        android:gravity="center"
                        android:layout_height="30dp"
                        android:layout_column = "1"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="Jan5 , 2021"/>
                    <TextView
                        android:gravity="center"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="999"/>
                    <TextView
                        android:gravity="center"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="XiaMen University"/>
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="#CCCCCC"/>

                <TableRow>
                    <TextView
                        android:gravity="center"
                        android:layout_height="30dp"
                        android:layout_column = "1"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="Oct23 , 2020"/>
                    <TextView
                        android:gravity="center"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="1030"/>
                    <TextView
                        android:gravity="center"
                        android:padding="3dip"
                        android:textColor="#000000"
                        android:text="Fuzhou Yongjia Market"/>
                </TableRow>
                <View
                    android:layout_height="1dip"
                    android:background="#CCCCCC"/>
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Information"
                android:textColor="@color/theme_green"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                />
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:stretchColumns="4"
                >
                <TableRow
                    >
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/charge"
                        />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="Charger"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <ImageView
                        android:gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/arrow" />
                </TableRow>
                <TableRow
                    >
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/game_device"
                        />
                    <TextView
                        android:layout_width="200dp"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="Game Device"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <ImageView
                        android:gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/arrow" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/basket"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="320dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="5"
        android:background="@color/white"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/favorite_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="favorite"
                android:textColor="@color/icon_disable" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/search_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="search"
                android:textColor="@color/icon_disable"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/camera_able" />

            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_below="@+id/img3"-->
            <!--                android:layout_centerHorizontal="true"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:gravity="center"-->
            <!--                android:text="camera"-->
            <!--                android:textColor="@color/icon_disable"/>-->
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/location_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="station"
                android:textColor="@color/icon_disable"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/my_disable" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="personal"
                android:textColor="@color/icon_disable" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>